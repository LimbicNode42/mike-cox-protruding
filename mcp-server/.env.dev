# MCP Server Configuration
# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000
CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# PostgreSQL Database Configuration
# 
# Host Configuration Examples:
# Local IP address: POSTGRES_HOST=192.168.0.50
# Domain name: POSTGRES_HOST=postgres.mydomain.com
# Localhost: POSTGRES_HOST=localhost
# Docker service: POSTGRES_HOST=postgres-container
# Cloud provider: POSTGRES_HOST=mydb.abc123.us-east-1.rds.amazonaws.com
#
ENABLE_POSTGRES=true
POSTGRES_HOST=192.168.0.50
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Optional: Override specific database connection
# POSTGRES_DB=specific_database_name

# Redis Configuration
# 
# Host Configuration Examples:
# Local IP address: REDIS_HOST=192.168.0.50
# Domain name: REDIS_HOST=redis.mydomain.com
# Localhost: REDIS_HOST=localhost
# Docker service: REDIS_HOST=redis-container
# Cloud provider: REDIS_HOST=myredis.abc123.cache.amazonaws.com
#
ENABLE_REDIS=true
REDIS_HOST=192.168.0.50
REDIS_PORT=6379

# MongoDB Configuration
# 
# Host Configuration Examples:
# Local IP address: MONGODB_HOST=192.168.0.50
# Domain name: MONGODB_HOST=mongodb.mydomain.com
# Localhost: MONGODB_HOST=localhost
# Docker service: MONGODB_HOST=mongodb-container
# Cloud provider: MONGODB_HOST=mydb.abc123.mongodb.net
#
ENABLE_MONGODB=true
MONGODB_HOST=192.168.0.50
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=your_password_here

# InfluxDB Configuration
# 
# Host Configuration Examples:
# Local IP address: INFLUXDB_HOST=192.168.0.50
# Domain name: INFLUXDB_HOST=influxdb.mydomain.com
# Localhost: INFLUXDB_HOST=localhost
# Docker service: INFLUXDB_HOST=influxdb-container
# Cloud provider: INFLUXDB_HOST=mydb.abc123.influxdb.com
#
ENABLE_INFLUXDB=true
INFLUXDB_HOST=192.168.0.50
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=your_token_here
INFLUXDB_ORG=your_org_here
INFLUXDB_BUCKET=your_bucket_here
