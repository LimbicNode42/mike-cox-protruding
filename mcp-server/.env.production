# Production Environment Configuration for MCP Server
# Copy this file to .env.production and customize for your production environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# DATABASE TOGGLES
# =============================================================================

# Enable/disable databases (true/false)
ENABLE_POSTGRES=true
ENABLE_REDIS=true
ENABLE_MONGODB=true
ENABLE_INFLUXDB=true

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================

# PostgreSQL connection settings
POSTGRES_HOST=postgres.example.com
POSTGRES_PORT=5432
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=mcp_production

# SSL settings for production
POSTGRES_SSLMODE=require
POSTGRES_SSLCERT=/etc/ssl/certs/client-cert.pem
POSTGRES_SSLKEY=/etc/ssl/private/client-key.pem
POSTGRES_SSLROOTCERT=/etc/ssl/certs/ca-cert.pem

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection settings
REDIS_HOST=redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Redis SSL (if using Redis with TLS)
REDIS_SSL=true
REDIS_SSL_CERT_REQS=required
REDIS_SSL_CA_CERTS=/etc/ssl/certs/redis-ca.pem

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================

# MongoDB connection settings
MONGODB_HOST=mongodb.example.com
MONGODB_PORT=27017
MONGODB_USER=mcp_user
MONGODB_PASSWORD=your_mongodb_password_here
MONGODB_DB=mcp_production

# MongoDB connection options
MONGODB_AUTH_SOURCE=admin
MONGODB_SSL=true
MONGODB_SSL_CA_FILE=/etc/ssl/certs/mongodb-ca.pem

# =============================================================================
# INFLUXDB CONFIGURATION
# =============================================================================

# InfluxDB connection settings
INFLUXDB_HOST=influxdb.example.com
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=your_organization
INFLUXDB_BUCKET=mcp_production

# InfluxDB SSL settings
INFLUXDB_SSL=true
INFLUXDB_SSL_CA_FILE=/etc/ssl/certs/influxdb-ca.pem

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API rate limiting (requests per second)
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST=20

# CORS settings
CORS_ORIGINS=https://your-frontend.example.com,https://admin.example.com
CORS_ALLOW_CREDENTIALS=true

# Authentication (if implementing authentication)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Metrics and monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Distributed tracing
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=jaeger.example.com
JAEGER_AGENT_PORT=6831

# Application Performance Monitoring
APM_ENABLED=true
APM_SERVICE_NAME=mcp-server
APM_ENVIRONMENT=production

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Health check services
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# External API integrations (if any)
EXTERNAL_API_BASE_URL=https://api.external-service.com
EXTERNAL_API_KEY=your_external_api_key_here

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Connection pool settings
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=5

REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=10

MONGODB_MAX_POOL_SIZE=20
MONGODB_MIN_POOL_SIZE=5

# Memory and performance tuning
MAX_REQUEST_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=300        # 5 minutes
WORKER_PROCESSES=4

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# S3 backup settings (if using S3 for backups)
BACKUP_S3_BUCKET=mcp-server-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles for gradual rollouts
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_REAL_TIME_SYNC=false
FEATURE_EXPERIMENTAL_QUERIES=false
